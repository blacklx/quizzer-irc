quiz_settings:
  question_count: 15
  answer_time_limit: 25  # seconds
  RATE_LIMIT: 3

bot_settings:
  server: "irc.example.org"
  port: 6697
  channel: "#quizzer"
  nickname: "Quizzer"
  realname: "Quizzer"
  use_ssl: true # if set to False, remember to change port to 6667
  reconnect_interval: 15 # in seconds, connection retry interval
  rejoin_interval: 15 # in seconds, how often to attempt rejoin channel if kicked
  nickname_retry_interval: 30 # in seconds, how often to try to regain botnick if taken

nickserv_settings:
  use_nickserv: True
  nickserv_name: "N"
  nickserv_account: "Quizzer"
  # nickserv_password: Leave empty - use NICKSERV_PASSWORD environment variable or .env file instead
  nickserv_command_format: "IDENTIFY {account} {password}"

bot_log_settings:
  enable_logging: True  # Set to True to see console output
  enable_debug: True
  log_filename: "logs/Quizzer.log"

admin_settings:
  # Verification method: "nickserv" (default), "password", "hostmask", or "combined"
  verification_method: "nickserv"
  
  admins: ["YourNick"]  # List of admin nicknames format: ["AdminNick1", "AdminNick2"]
  
  # Password-based verification settings (if verification_method is "password" or "combined")
  password_settings:
    session_timeout: 3600  # Session duration in seconds (default: 1 hour)
    max_attempts: 3  # Maximum failed password attempts before lockout
    lockout_duration: 300  # Lockout duration in seconds (default: 5 minutes)
    # Passwords are stored in .env file as: ADMIN_PASSWORD_<nickname>=password
    # Passwords are auto-hashed on first use
  
  # Hostmask-based verification settings (if verification_method is "hostmask" or "combined")
  hostmask_settings:
    # Format: "nickname": ["hostmask1", "hostmask2"]
    # Wildcards: *!*@host.com, *!user@*.domain.com
    hostmasks:
      # "YourNick": ["*!*@trusted.host", "*!*@*.example.com"]

